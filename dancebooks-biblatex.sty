\ifdancebooks@detailed%
\xapptobibmacro{url+urldate+note}{%
\iffieldundef{annotation}%
{}%
{\newline\mkbibacro{note}\addcolon\addspace\usebibmacro{annotation}}%
\iffieldundef{keywords}%
{}%
{\newline\mkbibacro{keywords}\addcolon\addspace\usebibmacro{lista}}%
}
{}{}%
\else
\fi

